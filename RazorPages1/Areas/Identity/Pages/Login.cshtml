@page
@model LoginModel
@{
    Layout = "_Layout";
}

<form method="POST">
    <div class="container">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="LoginVM.UserName"></label>
                    <input type="text" asp-for="LoginVM.UserName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="LoginVM.Password"></label>
                    <input type="password" class="form-control" asp-for="LoginVM.Password" />
                </div>
                <div class="form-group">
                    <label asp-for="LoginVM.RememberMe"></label>
                    <input type="checkbox" asp-for="LoginVM.RememberMe" />
                </div>
                <div class="form-group">
                    <button class="btn btn-default" asp-page-handler="Login">Login</button>
                </div>
            </div>
        </div>
    </div>
</form>
